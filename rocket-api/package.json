{
    "name": "rocket-api",
    "version": "1.0.0",
    "description": "APIs for Rocket Project",
    "main": "index.js",
    "scripts": {
        "start": "nodemon src/index.ts",
        "start:prod": "NODE_ENV=production node build/index.js",
        "build": "tsc --project ./",
        "test": "jest",
        "check:types": "tsc",
        "lint": "eslint --ext .tsx,.ts,.js .",
        "prettier": "prettier --ignore-path .gitignore  \"**/*.+(js|ts|json)\"",
        "format": "npm run prettier -- --write",
        "format:check": "npm run prettier -- --list-different",
        "validate": "npm-run-all --parallel check:types format:check lint test build"
    },
    "author": "Andra Malmen",
    "license": "ISC",
    "devDependencies": {
        "@babel/core": "^7.12.3",
        "@babel/preset-env": "^7.12.1",
        "@babel/preset-typescript": "^7.12.1",
        "@types/config": "0.0.36",
        "@types/cors": "^2.8.8",
        "@types/express": "^4.17.8",
        "@types/jest": "^26.0.14",
        "@types/mongoose": "^5.7.36",
        "@types/morgan": "^1.9.1",
        "@types/node": "^14.11.8",
        "@typescript-eslint/eslint-plugin": "^4.4.1",
        "@typescript-eslint/parser": "^4.4.1",
        "babel-jest": "^26.5.2",
        "eslint": "^7.11.0",
        "eslint-config-prettier": "^6.13.0",
        "husky": "^4.3.0",
        "jest": "^26.5.3",
        "lint-staged": "^10.4.2",
        "mongoose": "^5.10.9",
        "nodemon": "^2.0.5",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.1.2",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.3"
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "config": "^3.3.2",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "morgan": "^1.10.0"
    }
}
